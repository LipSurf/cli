{
    "name": "@lipsurf/cli",
    "version": "2.4.3-alpha.1",
    "description": "Build LipSurf plugins to add custom voice commands to any website.",
    "bugs": {
        "url": "https://github.com/LipSurf/cli/issues"
    },
    "bin": {
        "lipsurf-cli": "lib/lipsurf-cli.js"
    },
    "scripts": {
        "clean": "rm -r lib/*",
        "build": "cpy plugins-tsconfig.json lib && tsc -p tsconfig.json",
        "preversion": "yarn build",
        "watch": "cpy plugins-tsconfig.json lib && tsc -p tsconfig.json -w"
    },
    "author": "Miko Borys",
    "publishConfig": {
        "registry": "https://registry.npmjs.org"
    },
    "dependencies": {
        "@lipsurf/types": "^2.2.1-alpha.1",
        "@swc/core": "^1.2.127",
        "chokidar": "^3.5.2",
        "clone": "^2.1.2",
        "commander": "^8.3.0",
        "esbuild": "^0.14.25",
        "fs-extra": "^10.0.0",
        "globby": "^11.0.4",
        "js-beautify": "^1.13.5",
        "lodash": "^4.17.21",
        "resolve": "^1.22.0",
        "typescript": "4.5.5"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/node": "^16.11.1",
        "@types/resolve": "^1.20.1",
        "@yarnpkg/esbuild-plugin-pnp": "^3.0.0-rc.1",
        "cpy-cli": "^3.1.1"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "homepage": "https://github.com/LipSurf/cli",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LipSurf/cli.git"
    },
    "packageManager": "yarn@3.2.0",
    "main": "index.js",
    "directories": {
        "lib": "lib"
    },
    "keywords": [
        "voice-control",
        "speech-recognition",
        "a11y",
        "accessibility",
        "voice"
    ]
}
