{
  "compilerOptions": {
    "noEmitOnError": true,
    "incremental": true,
    "noImplicitAny": false,
    "strict": true,
    "noResolve": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "lib"
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules"
  ]
}